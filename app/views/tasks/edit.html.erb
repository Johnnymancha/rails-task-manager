<div class="container">
  <div>
    <h1>Edit this task</h1>
  </div>

  <div>
    <%= form_for(@task) do |f| %>
      <%= f.label :Title, 'Task name' %>
      <%= f.text_field :title %>
      <%= f.label :details, 'Description of the task'%>
      <%= f.text_field :details %>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
